@model EmployeePortal.ViewModel.LayoutViewModel

<div class="card w-100">
    <div class="card-body">
        <h5 class="card-title">What's on your mind?</h5>
        <form id="createPostForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group" style="margin-bottom:10px;">
                <input asp-for="Post.Title" type="text" class="form-control" placeholder="Title..." required>
            </div>
            <div class="form-group">
                <textarea asp-for="Post.Description" class="form-control" rows="8" placeholder="Share your thoughts..." required></textarea>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input asp-for="Image" style="padding:7px;" type="file" class="form-control" accept="image/*">
            </div>
            <div class="d-flex justify-content-between align-items-center mt-2">
                <button type="submit" class="btn btn-primary">Post</button>
                <div>
                    <span onclick="showComingSoonPopup()" style="cursor: pointer;"><i class="fa fa-camera hover-blue"></i> Add Video</span>
                    <span onclick="showComingSoonPopup()" style="cursor: pointer;"><i class="fa fa-map-marker hover-blue"></i> Add Location</span>
                </div>
            </div>
        </form>
    </div>
</div>