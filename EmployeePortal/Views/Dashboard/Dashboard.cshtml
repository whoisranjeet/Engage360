@{
    var successMessage = TempData["SuccessMessage"] as string;

    if (!string.IsNullOrEmpty(successMessage))
    {
        <script type="text/javascript">
            alert('@successMessage');
        </script>
    }
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">What's on your mind?</h5>
        <form method="post" action="/Post/Create">
            <div class="form-group">
                <textarea class="form-control" rows="8" placeholder="Write something..." name="PostContent" required></textarea>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input type="file" class="form-control-file" id="imageUpload" accept="image/*">
            </div>
            <div class="d-flex justify-content-between align-items-center mt-2">
                <button type="submit" class="btn btn-primary">Post</button>
                <div>
                    <span><i class="fa fa-camera"></i> Add Photo/Video</span>
                    <span><i class="fa fa-map-marker"></i> Add Location</span>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
