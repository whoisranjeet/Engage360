<div class="employee-card-container w-100" id="employeeContainer">
    <!-- Employees will load here dynamically -->
</div>

<div id="loading">
    <span class="spinner-border text-primary"></span> Loading...
</div>

<div id="endMessage" class="text-center mb-3 mt-4 text-black-50" style="display:none;">
    You've reached the end of the employee directory.
</div>

@section Scripts {
    <script>
        let page = 1;
        let isLoading = false;
        let hasMore = true;
        const pageSize = 16;

        function loadEmployees() {
            if (isLoading || !hasMore) return;
            isLoading = true;

            $.ajax({
                url: `/api/employees?page=${page}&pageSize=${pageSize}`,
                type: "GET",
                beforeSend: function () {
                    $("#loading").addClass("show"); // show spinner immediately
                },
                success: function (employees) {
                    // Add 1 second delay before rendering employees
                    setTimeout(() => {
                        if (employees.length === 0) {
                            hasMore = false;
                            $("#endMessage").show();
                        } else {
                            employees.forEach(emp => {
                                let profilePic = emp.profilePicture && emp.profilePicture.length > 0
                                    ? `data:image/jpeg;base64,${emp.profilePicture}`
                                    : `/img/${emp.gender === "Male" ? "male.jpg" : emp.gender === "Female" ? "female.jpg" : "other.jpg"}`;

                                let card = `
                                    <div class="employee-card">
                                        <div class="card shadow-lg h-100 text-center">
                                            <img src="${profilePic}"
                                                 class="card-img-top rounded-circle mt-4 mx-auto"
                                                 style="width:100px;height:100px;object-fit:cover;" />
                                            <div class="card-body">
                                                <h5 class="card-title font-weight-bold text-primary">${emp.firstName} ${emp.lastName}</h5>
                                                <p class="card-text mb-1"><strong>Email:</strong> ${emp.emailAddress}</p>
                                                <p class="card-text mb-1"><strong>Mobile:</strong> ${emp.mobileNumber ?? ''}</p>
                                                <p class="card-text mb-1"><strong>Address:</strong> ${emp.address ?? ''}</p>
                                                <p class="card-text mb-1"><strong>Department:</strong> ${emp.department ?? ''}</p>
                                            </div>
                                            <div class="card-footer border-top-0">
                                                <button class="btn btn-primary btn-sm" onclick="showComingSoonPopup()">View Profile</button>
                                            </div>
                                        </div>
                                    </div>
                                `;
                                $("#employeeContainer").append(card);
                            });
                            page++;
                        }

                        // hide spinner after delay
                        $("#loading").removeClass("show");
                        isLoading = false;
                    }, 400); // 0.4 second delay
                },
                error: function () {
                    console.error("Failed to load employees");
                    $("#loading").removeClass("show");
                    isLoading = false;
                }
            });
        }

        // Infinite Scroll
        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
                loadEmployees();
            }
        });

        // Initial load
        $(document).ready(function () {
            loadEmployees();
        });
    </script>
}
