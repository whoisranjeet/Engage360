@model EmployeePortal.Core.DTOs.UserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Engage360</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body class="SignInOut-Body">
    <div class="login-container">
        <div class="login-box">
            <h2>Sign In</h2>
            <form method="post" asp-action="UserSignIn">
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary-errors">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <div class="input-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" type="text" id="username" required />
                </div>
                <div class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" id="password" required />
                </div>
                <div class="forgot-password">
                    <a onclick="showComingSoonPopup()">Forgot Password?</a>
                </div>
                <div class="input-group">
                    <button type="submit" class="login-btn">Sign In</button>
                </div>
                <div class="signup-link">
                    <span>Don't have an account? <a href="/SignUp">Sign Up</a></span>
                </div>
            </form>

            <!-- Social Login Buttons -->
            <div class="social-login">
                <h3>Or Sign In with</h3>
                <div class="social-buttons">
                    <button type="button" onclick="showComingSoonPopup()" class="btn-facebook">Facebook</button>
                    <button type="button" onclick="showComingSoonPopup()" class="btn-google">Google</button>
                    <button type="button" onclick="showComingSoonPopup()" class="btn-twitter">Twitter</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Coming Soon Popup -->
    <div id="comingSoonPopup" class="coming-soon-popup">
        <div class="popup-content">
            <span class="close-btn" onclick="closePopup()">&times;</span>
            <h2>Feature Coming Soon!</h2>
            <p>This feature is currently in development. Stay tuned for updates!</p>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
