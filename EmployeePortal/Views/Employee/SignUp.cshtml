@model EmployeePortal.Core.DTOs.EmployeeDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Engage360 - Sign Up</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body class="SignInOut-Body">
    <div class="login-container">
        <div class="login-box">
            <div class="tab-toggle-container mb-2">
                <div class="tab-toggle">
                    <a href="/">Sign in</a>
                    <a href="/SignUp" class="active">Sign up</a>
                </div>
            </div>
            <h5 class="mb-3 text-center">Create an account</h5>
            <form method="post" asp-action="SignUp" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="d-flex mb-2 justify-content-between gap-2">
                    <div class="input-group">
                        <input asp-for="FirstName" type="text" placeholder="First name" required />
                    </div>
                    <div class="input-group">
                        <input asp-for="LastName" type="text" placeholder="Last name" required />
                    </div>
                </div>
                <div class="input-group mb-2">
                    <input asp-for="EmailAddress" type="email" placeholder="Enter your email" required />
                </div>
                <div class="input-group mb-2">
                    <input asp-for="MobileNumber" type="text" placeholder="888-666-0000" required />
                </div>
                <div class="input-group">
                    <button type="submit" class="login-btn">Create an account</button>
                </div>
                <div class="or">OR SIGN UP WITH</div>
                <div class="d-flex gap-2 justify-content-between">
                    <button type="button" onclick="location.href='/GoogleSignInUp'" class="flex-1 social-button"><img src="~/img/G.svg" class="social-icon" alt="Google Logo" /></button>
                    <button type="button" onclick="showComingSoonPopup()" class="flex-1 social-button"><img src="~/img/F.svg" class="social-icon" alt="Facebook Logo" /></button>
                    <button type="button" onclick="showComingSoonPopup()" class="flex-1 social-button"><img src="~/img/X.svg" class="social-icon" alt="X Logo" /></button>
                </div>
                <div class="terms">
                    By creating an account, you agree to our <a href="#" onclick="showComingSoonPopup()" style="cursor:pointer;">Terms & Service</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Coming Soon Popup -->
    <div id="comingSoonPopup" class="coming-soon-popup">
        <div class="popup-content">
            <span class="close-btn" onclick="closePopup()">&times;</span>
            <h2>Feature Coming Soon!</h2>
            <p>This feature is currently in development. Stay tuned for updates!</p>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>