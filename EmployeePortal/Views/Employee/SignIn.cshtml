@model EmployeePortal.Core.DTOs.UserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Engage360</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body class="SignInOut-Body">
    <div class="login-container">
        <div class="login-box">
            <div class="tab-toggle-container mb-2">
                <div class="tab-toggle">
                    <a href="/" class="active">Sign in</a>
                    <a href="/SignUp">Sign up</a>
                </div>
            </div>
            <h5 class="mb-3 text-center">Welcome back</h5>
            <form method="post" asp-action="UserSignIn">
                @Html.AntiForgeryToken()
                <div class="input-group mb-2">
                    <input asp-for="Username" type="text" id="username" placeholder="Enter your email" required />
                </div>
                <div class="input-group mb-2">
                    <input asp-for="Password" type="password" id="password" placeholder="Enter your password" required />
                </div>
                <div class="d-flex justify-content-between gap-1 mb-2">
                    <div class="d-flex gap-1">
                        <input for="RememberMe" type="checkbox" id="RememberMe">
                        <label for="RememberMe" class="terms m-0 remember-me fw-normal">Remember Me</label>
                    </div>
                    <a onclick="showComingSoonPopup()" class="terms forgot-password m-0">Forgot Password?</a>
                </div>
                <div class="input-group">
                    <button type="submit" class="login-btn">Sign In</button>
                </div>
                <div class="or">OR SIGN IN WITH</div>
            </form>

            <!-- Social Login Buttons -->
            <div class="d-flex gap-2 justify-content-between">
                <button type="button" class="flex-1 social-button" onclick="location.href='/GoogleSignUp'"><img src="~/img/G.svg" class="social-icon" alt="Google Logo" /></button>
                <button type="button" onclick="showComingSoonPopup()" class="flex-1 social-button"><img src="~/img/F.svg" class="social-icon" alt="Facebook Logo" /></button>
                <button type="button" onclick="showComingSoonPopup()" class="flex-1 social-button"><img src="~/img/X.svg" class="social-icon" alt="X Logo" /></button>
            </div>
            <div class="terms">
                Do you have an account? <a href="/SignUp" style="cursor:pointer;">Sign Up</a>.
            </div>
        </div>
    </div>

    <!-- Coming Soon Popup -->
    <div id="comingSoonPopup" class="coming-soon-popup">
        <div class="popup-content">
            <span class="close-btn" onclick="closePopup()">&times;</span>
            <h2>Feature Coming Soon!</h2>
            <p>This feature is currently in development. Stay tuned for updates!</p>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
